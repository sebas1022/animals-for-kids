.cont-btn-micro
    margin auto
    width 250px

.btn-micro-app
    position relative
    
.grabar
    animation pulse 1.5s infinite linear

.punto
    position absolute
    background-color white
    width 15px
    height 15px
    border-radius 50%
    left calc(50% - (15px / 2))
    top calc(50% - (15px / 2))

.desaparece
    transition opacity 1s
    opacity 0


@keyframes pulse
	0%
        box-shadow 0px 0px 5px 0px rgba(173, 0, 0, .3)
	65%
        box-shadow 0px 0px 5px 13px rgba(173, 0, 0, .3)
	90%
        box-shadow 0px 0px 5px 13px rgba(173, 0, 0, 0)


